<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.homefit.android.homefit">

  <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
  <uses-permission android:name="android.permission.CAMERA"/>

  <uses-feature
    android:name="android.hardware.camera"
    android:required="false"/>

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <!-- To auto-complete the email text field in the login form with the user's emails -->
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  <uses-permission android:name="android.permission.READ_PROFILE"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/hf_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".CustomerListActivity"
      android:label="@string/lbl_screen_customer">
    </activity>
    <activity
      android:name=".CustomerActivity"
      android:parentActivityName=".CustomerListActivity">
    </activity>
    <activity
      android:name=".LoginActivity"
      android:label="@string/login_title">
    </activity>
    <activity android:name=".SessionListActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".SessionActivity"
      android:parentActivityName=".SessionListActivity">
    </activity>
  </application>

</manifest>